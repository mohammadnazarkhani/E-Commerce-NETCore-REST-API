@model List<Sms>

<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
    }

    .page-title {
        color: white;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    }

    .messages-container {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 15px;
    }

    .message-card {
        border: none;
        transition: all 0.3s ease;
        background: white;
        border-radius: 12px;
    }

    .message-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
    }

    .sender-badge {
        background: linear-gradient(to right, #667eea, #764ba2);
        color: white;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.9rem;
    }

    .empty-message {
        background: rgba(255, 255, 255, 0.9);
        border-radius: 12px;
        border: none;
    }
</style>

<div class="container-lg py-5">
    <h1 class="text-center mb-4 fw-bold page-title">صندوق دریافت</h1>
    <div class="messages-container p-4">
        @if (Model == null || !Model.Any())
        {
            <div class="empty-message alert alert-info text-center shadow-sm">هیچ پیامی وجود ندارد.</div>
        }
        else
        {
            <div class="d-flex flex-column gap-3">
                @foreach (var sms in Model)
                {
                    <div class="message-card card shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="sender-badge">@sms.SenderId</span>
                                <small class="text-muted">فرستنده</small>
                            </div>
                            <p class="card-text">@sms.Message</p>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
